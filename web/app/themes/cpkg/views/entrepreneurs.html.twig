<div class="row">
    <div class="col-sm-6">
        {% for entry in entries %}
        <div class="panel panel-default toggleable">
            <div class="panel-heading">
                <h3 class="panel-title">{{ entry.title }}</h3>
            </div>
            <div class="panel-body">
                {{ entry.content }}
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="col-sm-6">
        {% for entry in entries %}
            <div class="panel panel-default toggleable" type="text" onload="(this.type = determineClass(this))">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ entry.title }}</h3>
                </div>
                <div class="panel-body">
                    {{ entry.content }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

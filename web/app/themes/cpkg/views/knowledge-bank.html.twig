<div class="row">
    <div class="col-sm-12">
        <div class="bs-example" data-example-id="default-media">
        {% for entry in entries %}
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading h_inline-block">
                        <a href="{{ entry.permalink }}">
                            <strong>{{ entry.post_title }}</strong>
                        </a>
                    </h4>
                    <span class="byline author vcard h_inline-block">
                        __ <a href="#" rel="author" class="fn gmw-light-blue">{{ entry.get_author.name }}</a>
                        <time class="entry-date" datetime="{{ entry.post_date }}">{{ entry.post_date|date("m/d/Y") }}</time>
                    </span>
                    <p class="post-excerpt">{{ entry.post_content|excerpt(30) }}<a class="dwarf-heading" href="{{ entry.permalink }}"> read more</a></p>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
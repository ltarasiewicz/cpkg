<header class="banner navbar navbar-default navbar-fixed-top" role="banner">
  <div class="container">
      <a class="navbar-brand" href="#"><i class="fa fa-home"></i></a>
  </div>
</header>
    <div class="container">         
        <nav class="navbar navbar-default plain" role="navigation">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only"><?= __('Toggle navigation', 'sage'); ?></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>      
                {% if site_logo %}
                    <div id="logo">
                            <a href="{{site.url}}"><img src="{{site_logo}}" alt="{{site.name}}"/></a>
                    </div><!-- end of #logo -->            
                {% else %}
                    <a class="navbar-brand" href="{{site.url}}">{{site.name}}</a>
                {% endif %}                    
            </div>          
            <div class="collapse navbar-collapse" id="primary-navigation-links">
                <ul id="menu-main-navigation-1" class="nav navbar-nav">
                    {% for item in primary_menu.get_items %}
                        {% if item.get_children %}
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="menu-item-title">{{item.title}}</span><span class="caret"></span></a>                            
                                <ul class="dropdown-menu" role="menu">
                                    {% for child in item.get_children %}
                                        <li><a href="{{child.get_link}}">{{child.title}}</a></li>
                                    {% endfor %}
                                </ul>                            
                            </li>
                        {% else %}
                            <li><a href="{{item.get_link}}"><span class="menu-item-title">{{item.title}}</span></a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </nav>        
        {% filter shortcodes %}
            <div class='row'>
                <div class='col-sm-8'>
                    <div id="primary-slider">[metaslider id=5] </div>
                </div>
                <div class='col-sm-4 hidden-xs'>
                    <div id="secondary-slider">[metaslider id=8]</div>
                </div>
            </div>
        {% endfilter %}
    </div>